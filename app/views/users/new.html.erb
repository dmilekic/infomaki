<div class="content">
  <h1>Add new user</h1>

  <% form_for(@user) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name %>
    </p>
    <p>
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name %>
    </p>
    <p>
      <%= f.label :password %><br />
      <%= f.text_field :password %>
    </p>
    <p>
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </p>
    <p>
      <%= f.label :is_admin %><br />
      <%= f.check_box :is_admin %>
    </p>
    <p>
      <%= f.label :is_superuser %><br />
      <%= f.check_box :is_superuser %>
    </p>
    <p>
      <%= f.submit "Create" %>
    </p>
  <% end %>

  <%= link_to 'Back', users_path %>
</div>